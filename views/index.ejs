<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Scraper</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: grid;
      gap: 20px;
    }

    h1, h2, p {
      text-align: center;
    }

    form {
      text-align: center;
      margin-bottom: 20px;
      display: flex;
      gap: 5px;
      align-items: center;
    }

    input {
      padding: 8px;
      width: 100%;
    }

    button {
      padding: 8px 16px;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    .loading {
      text-align: center;
      margin-top: 20px;
      font-style: italic;
    }

    .error {
      color: red;
      text-align: center;
      margin-top: 20px;
    }
  </style>
  <script>
    async function addToWatchlist(productName, productData) {
      try {
        const response = await fetch(`/addToWatchlist?productName=${productName}&productData=${productData}`);
        const result = await response.json();

        if (result.success) {
          // Update the page without refreshing
          updatePage(result.watchlist);
        }
      } catch (error) {
        console.error('Error adding to watchlist:', error);
        alert('Error adding to watchlist. Please try again.');
      }
    }

    async function revokeWatch(productName) {
      try {
        const response = await fetch(`/revokeWatch?productName=${productName}`);
        const result = await response.json();

        if (result.success) {
          // Update the page without refreshing
          updatePage(result.watchlist);
        }
      } catch (error) {
        console.error('Error revoking from watchlist:', error);
        alert('Error revoking from watchlist. Please try again.');
      }
    }

    function updatePage(watchlist) {
      const wishlistTable = document.getElementById('wishlistTable');
      const wishlistBody = wishlistTable.querySelector('tbody');

      // Clear existing rows
      wishlistBody.innerHTML = '';

      // Add rows for each wishlist item
      Object.entries(watchlist).forEach(([productName, item]) => {
        const row = wishlistBody.insertRow();
        row.innerHTML = `
          <td>${item.data.title}</td>
          <td>${item.data.price}</td>
          <td>${item.data.rating}</td>
          <td><img src="${item.data.image}" alt="Product Image" height="50"></td>
          <td>
            <button onclick="revokeWatch('${productName}')">Revoke Watch</button>
          </td>
          <td>${item.data.price}</td>
          <td>${item.timestamp.toLocaleString()}</td>
        `;
      });
    }
  </script>
</head>
<body>
  <h1>Product Price Tracker</h1>

  <form method="post" action="/scrape">
    <input type="text" id="productName" name="productName" required placeholder="Enter Product Name here...">
    <button type="submit">Search</button>
  </form>

  <% if (loading) { %>
    <p class="loading">Loading...</p>
  <% } else if (error) { %>
    <p class="error"><%= error %></p>
  <% } else if (searchResults !== null) { %>
    <h2>Search Results:</h2>
    <table>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Rating</th>
        <th>Image</th>
        <th>Action</th>
      </tr>

      <% searchResults.forEach(product => { %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= product.rating %></td>
          <td><img src="<%= product.image %>" alt="Product Image" height="50"></td>
          <td>
            <button onclick="addToWatchlist('<%= product.title %>', '<%= JSON.stringify(product) %>')">Add to Watchlist</button>
          </td>
        </tr>
      <% }); %>
    </table>
  <% } %>

  <h2>Wishlist:</h2>
  <table id="wishlistTable">
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Image</th>
      <th>Action</th>
      <th>Saved Price</th>
      <th>Last Updated</th>
    </tr>

    <% Object.entries(watchlist).forEach(([productName, item]) => { %>
      <tr>
        <td><%= item.data.title %></td>
        <td><%= item.data.price %></td>
        <td><%= item.data.rating %></td>
        <td><img src="<%= item.data.image %>" alt="Product Image" height="50"></td>
        <td>
          <button onclick="revokeWatch('<%= productName %>')">Revoke Watch</button>
        </td>
        <td><%= item.data.price %></td>
        <td><%= item.timestamp.toLocaleString() %></td>
      </tr>
    <% }); %>
  </table>

  <% if (searchResults === 'Please provide a product name.') { %>
    <p class="error"><%= searchResults %></p>
  <% } %>
</body>
</html>
